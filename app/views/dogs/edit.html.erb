<%= form_for @dog do |f| %>
  Name: <%= f.text_field :name %><br>
  <input type="hidden" role="uploadcare-uploader" name="dog[image]"
        value="<%= @dog.image %>"
         data-crop="disabled"
         data-images-only="true" />
  Age: <%= f.number_field :age %><br>
  Size: <%= f.text_field :size %><br>
  Breed: <%= f.text_field :breed %><br>
  About Me: <%= f.text_area :bio %><br>
  <%= f.submit "Save " %>
  <br>
<% end %>
<%= button_to "Delete", @dog, method: :delete %>
