<div class="container">
  <h1><center>Log In</center></h1>
  <div class="well col-md-4 col-md-offset-4">

    <%= form_tag '/login' do %>
    <div class="form-group">
      Email: <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      Password: <%= password_field_tag :password %>
    </div>
    <div><%= submit_tag "Submit", class: 'btn btn-info' %></div>

    <% end %>
  </div>
</div>
