<h1>Edit Profile</h1>
<hr>
<%= form_for @user do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Name", class: "form-control", autofocus: true %>
</div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "email@example.com", class: "form-control" %>
  </div>
  <%= f.submit "Save Profile", class: "btn btn-block btn-default" %>
<% end %>
