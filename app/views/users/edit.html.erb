<h1>Edit Profile</h1>
<hr>
<%= form_for @user do |f| %>
<div class="input-field col 8">
  <%= f.label :name, "Name"%>
  <%= f.text_field :name, class: "validate", autofocus: true %>
</div>
  <div class="input-field col 8">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "validate" %>
  </div>
  <%= f.submit "Save Profile", class: "btn btn-block btn-default" %>
<% end %>
